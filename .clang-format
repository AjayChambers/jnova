---
Language: Cpp
#
#
############################################
## GENERALIZED SETTINGS
BasedOnStyle: Google
ColumnLimit: 90
IndentWidth: 4
MaxEmptyLinesToKeep: 6
AccessModifierOffset: -1
BracedInitializerIndentWidth: 2
ContinuationIndentWidth: 2
NamespaceIndentation: All
RemoveEmptyLinesInUnwrappedLines: false
#
#
############################################
## CTOR INITIALIZER STYLE
PackConstructorInitializers: Never
ConstructorInitializerIndentWidth: 0
#
#
############################################
## FUNCTION DEFINITION STYLE
AllowShortFunctionsOnASingleLine: Inline # Only merge functions defined inside a class. Implies empty.
AllowAllParametersOfDeclarationOnNextLine: true
BreakAfterReturnType: AllDefinitions
#
#
############################################
## FUNCTION DECLARATION STYLE
AlignAfterOpenBracket: BlockIndent
AlignConsecutiveDeclarations:
    Enabled: true
    AlignFunctionPointers: true
    AcrossComments: true
#
#
############################################
## CONTROL STATEMENTS & LOOPS
AllowShortLoopsOnASingleLine: true
#
#
############################################
## BRACE WRAPPING STYLE
BreakBeforeBraces: Custom
BraceWrapping:
    AfterClass: true
    AfterControlStatement: MultiLine
    SplitEmptyFunction: false 
    SplitEmptyRecord: false
    SplitEmptyNamespace: false
# STRING FORMATTING STYLE
BreakAdjacentStringLiterals: true
BreakStringLiterals: true
# OPERATORS & ASSIGNMENTS
AlignOperands: DontAlign # AlignAfterOperator
PointerAlignment: Left
AlignConsecutiveAssignments:
    Enabled: true
    AlignCompound: true
# MACRO FORMATTING
AlignConsecutiveMacros:
    Enabled: true
    AcrossEmptyLines: true
    AcrossComments: true
AlignEscapedNewlines: LeftWithLastLine
# SWITCH & CASE STATEMENT STYLE
AlignConsecutiveShortCaseStatements:
    Enabled: true
    AlignCaseColons: true
# COMMENT FORMATTING
AlignTrailingComments:
    Kind: Always
    OverEmptyLines: 3
FixNamespaceComments: false
# MISCELLANEOUS FORMATTING
RemoveSemicolon: true
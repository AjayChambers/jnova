{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMAKE: UPDATE BUILD",
            "detail": "CMake: Updates build by compiling all (and only all) files that have had changes made to them.",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "group": "build"
            },
            "icon": {
                "color": "terminal.ansiBlue",
                "id": "refresh"
            }
        },
        {
            "label": "CMAKE: REINITIALIZE PROJECT",
            "detail": "CMAKE: Reinitialize project build-system, build dir, & source dir.",
            "type": "shell",
            "command": "cmake",
            "hide": false,
            "args": [
                "-G",
                "Unix Makefiles",
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "group": "fresh-build"
            },
            "icon": {
                "color": "terminal.ansiMagenta",
                "id": "repo-create"
            },
            "problemMatcher": []
        },
        {
            "label": "BASH: RM BUILD DIR",
            "detail": "CMake: Deletes the current build directory and all of its contents.",
            "type": "shell",
            "hide": false,
            "command": "rm",
            "args": [
                "-R",
                "${workspaceFolder}/build"
            ],
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "group": "fresh-build"
            },
            "icon": {
                "color": "terminal.ansiRed",
                "id": "trash"
            },
            "problemMatcher": []
        },
        {
            "label": "CMAKE: FRESH BUILD",
            "detail": "CMake: Delete the old build and generate a new one.",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "BASH: RM BUILD DIR",
                "CMAKE: REINITIALIZE PROJECT",
                "CMAKE: UPDATE BUILD"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "panel": "shared",
                "group": "fresh-build"
            },
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "repo-create"
            }
        }
    ]
}

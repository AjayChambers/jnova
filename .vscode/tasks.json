            "label": "CMAKE: UPDATE BUILD",
            "detail": "CMake: Updates build by compiling all (and only all) files that have had changes made to them.",
            "type": "shell",
            "problemMatcher": ["$gcc"],
            "command": "cmake",
            "args": ["--build", "${workspaceFolder}/build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "group": "fresh-build",
                "revealProblems": "onProblem",
                "clear": true
            },
